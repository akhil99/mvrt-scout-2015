<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mvrt.scout.BluetoothActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:text="Paired Devices (swipe down to refresh)"
            android:textSize="14sp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:textColor="@color/primary"
            android:paddingStart="16dp" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/paired_devices_swipe_refresh"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <android.support.v7.widget.RecyclerView
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                android:layout_height="fill_parent"
                android:id="@+id/list_paired_devices"/>
        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:text="Nearby Devices (swipe down to refresh)"
            android:textSize="14sp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:textColor="@color/primary"
            android:paddingLeft="16dp"
            style="?android:attr/progressBarStyleLarge" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/nearby_devices_swipe_refresh"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <android.support.v7.widget.RecyclerView
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                android:layout_height="fill_parent"
                android:id="@+id/list_nearby_devices"/>
        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/btProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        style="?android:attr/progressBarStyleLarge" />

</FrameLayout>
