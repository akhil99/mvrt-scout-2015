<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Alliance"
            android:textSize="20sp"
            android:layout_marginTop="15dp"/>

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/standscout_start_radiogroup"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Blue Alliance"
                    android:checked="true"
                    android:id="@+id/standscout_radio_bluealliance"/>
                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Red Alliance"
                    android:id="@+id/standscout_radio_redalliance"/>
            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/standscout_start_tournament"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:layout_marginTop="15dp"
                android:hint="Tournament (SVR)" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/standscout_start_matchId"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:hint="Match # (1)"
                android:inputType="number"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/standscout_start_team"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:hint="Team (115)"
                android:inputType="number"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/standscout_button_start"
                android:elevation="5dp"
                style="@style/mvrt_button"
                android:layout_marginTop="15dp"
                android:text="Start Scouting!"/>

        </LinearLayout>
</FrameLayout>
