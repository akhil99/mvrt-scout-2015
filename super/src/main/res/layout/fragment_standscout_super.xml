<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Alliance"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:id="@+id/standscout_alliancetextview"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/standscout_matchId"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:hint="Match # (1)"
            android:inputType="number"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/standscout_team1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:hint="Team 1 (115)"
            android:inputType="number"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/standscout_team2"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:hint="Team 2 (148)"
            android:inputType="number"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/standscout_team3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:hint="Team 3 (254)"
            android:inputType="number"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/standscout_button_start"
            android:elevation="5dp"
            style="@style/mvrt_button"
            android:layout_margin="15dp"
            android:text="Start Scouting!"/>

    </LinearLayout>

</FrameLayout>
