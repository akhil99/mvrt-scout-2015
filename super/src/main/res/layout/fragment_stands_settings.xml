<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Alliance"
        android:id="@+id/standscout_settings_alliancelabel"
        android:textSize="20sp"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/standscout_radiogroup"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Blue Alliance"
            android:id="@+id/standscout_radio_bluealliance"/>
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Red Alliance"
            android:id="@+id/standscout_radio_redalliance"/>
    </RadioGroup>

</LinearLayout>
